#!/usr/bin/env ruby

begin
  require 'gitscape'
rescue LoadError
  require 'rubygems'
  require 'gitscape'
end

if ARGV.size < 2
  puts "TODO: write usage help text"
  exit(1)
else
  case ARGV[0]
    when "hotfix_start"
      GitScape.new.hotfix_start
    when "hotfix_finish"
      GitScape.new.hotfix_finish
    else
      puts "Unknown command"
  end
end
